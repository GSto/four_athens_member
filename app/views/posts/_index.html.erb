   <div class="text-center">
   <div class="btn-group">

  <button class="btn btn-default btn-lg dropdown-toggle " type="button" data-toggle="dropdown">
    <%= @page %> <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to_unless_current("Whiteboard", root_path) do 
            content_tag(:a, "Whiteboard", class: "disabled2")
            end%> 
    </li> 
    <li><%= link_to_unless_current("Hiring", hiring_posts_path) do 
            content_tag(:a, "Hiring", class: "disabled2")
            end%> 
    </li> 
    <li><%= link_to_unless_current("Promote", promote_posts_path) do 
            content_tag(:a, "Promote", class: "disabled2")
            end%> 
    </li> 
    <li><%= link_to_unless_current("Launch", launch_posts_path) do 
            content_tag(:a, "Launch", class: "disabled2")
            end%> 
    </li> 
    <li><%= link_to_unless_current("Tools", tools_posts_path) do 
            content_tag(:a, "Tools", class: "disabled2")
            end%> 
    </li> 
    <li><%= link_to_unless_current("Request", request_thing_posts_path) do 
            content_tag(:a, "Hiring", class: "disabled2")
            end%> 
    </li> 
    <li><%= link_to_unless_current("Event", event_posts_path) do 
            content_tag(:a, "Event", class: "disabled2")
            end%> 
    </li> 

</div>
</div>

   <h3 id="newpost" class="new-post"> &lt;new_post&gt;</h3>
      <div class="input-append" id="hidden-textarea">
        <div class="input-group-btn">



          <%= form_for(:post, :url => {:action => 'create'}) do |f| %>
           
            <div class="btn-group" data-toggle="buttons">
              <label class="btn active">
                <%= f.radio_button(:general, true) %>General 
              </label>

              <label class="btn">
                <%= f.check_box(:hiring) %>Hiring 
              </label>
              <label class="btn">
                <%= f.check_box(:promote) %>Promote 
              </label>
              <label class="btn">
                <%= f.check_box(:launch) %>Launch 
              </label>
              <label class="btn">
                <%= f.check_box(:tools) %>Tools 
              </label>
              <label class="btn">
                <%= f.check_box(:request) %>Request 
              </label>
              <label class="btn">
                <%= f.check_box(:event) %>Event
              </label>
            </div>
          <%= f.text_area(:post_content, rows:5, class: "form-control") %>  
         
          <%= if user_signed_in? then f.hidden_field(:user_id, :value => current_user.id) end%>


          <%= f.submit(class: 'btn btn-default') %>
        </div>
        <% end %>

     </div>     





    <% @posts.each do |post| %>
      


      <div class="post">
        <div class = "initial-post">
          <h3 class="title writer"><%= post.user.first_name + " " + post.user.last_name %> <span class ="deleted">
          <% if user_signed_in? %>
            <% if post.user_id.to_i == current_user.id %>
            <%= link_to "x", post, method: :delete, data: { confirm: "Click 'Confirm' to delete." } %>
            <% end %>
          <% end %>
   
          </span></h3>
          
        

          <p class="content"><%= post.post_content %></p>
          <p class="posted">posted <%= distance_of_time_in_words_to_now(post.created_at) + " ago." %>
            <a class="show-reply reply">&lt;reply&gt;</a>
          </p>

          <div class="input-append reply-form">
      
            <span class="input-group-btn">
            <%= form_for(:comment, :url => {:controller => :comments, :action => 'create'}) do |f| %>
            <%= f.text_area(:comment_content, rows:5, class: "form-control") %>  
            <%= if user_signed_in? then f.hidden_field(:user_id, :value => current_user.id) end%>
            <%= f.hidden_field(:post_id, :value => post.id)%>
            <%= f.submit(class: 'btn btn-default') %>
            </span>
            <% end %>     
          </div> 
        </div>
        <div class="comments">
          <% @comments.each do |comment| %>
              <% if comment.post_id == post.id %>
        	      <div class="comment">

                <h3 class="writer title"><%= comment.user.first_name  + " " + comment.user.last_name %><span class ="deleted">
                  <% if user_signed_in? %>
                    <% if post.user_id.to_i == current_user.id %>
                      <%= link_to "x", comment, method: :delete, data: { confirm: "Click 'Confirm' to delete." } %>
                    <% end %>
                  <% end %>
                 </h3>
        	       <p class="content"><%= comment.comment_content %></p>
        	       <p class="posted-comment">posted <%= distance_of_time_in_words_to_now(comment.created_at) + " ago." %></p>
                </div>
              <% end %>          
          <% end %>
        </div>
	    </div>
    <% end %>

   <h3 id="newpost" class="new-post"> &lt;new_post&gt;</h3>
      <div class="input-append" id="hiddenTextareaDiv">
        <div class="input-group-btn">



          <%= form_for(:post, :url => {:action => 'create'}) do |f| %>
           
            <div class="btn-group" data-toggle="buttons">
              <label class="btn active">
                <%= f.radio_button(:general, true) %>General 
              </label>

              <label class="btn">
                <%= f.check_box(:hiring) %>Hiring 
              </label>
              <label class="btn">
                <%= f.check_box(:promote) %>Promote 
              </label>
              <label class="btn">
                <%= f.check_box(:launch) %>Launch 
              </label>
              <label class="btn">
                <%= f.check_box(:tools) %>Tools 
              </label>
              <label class="btn">
                <%= f.check_box(:request) %>Request 
              </label>
              <label class="btn">
                <%= f.check_box(:event) %>Event
              </label>
            </div>
          <%= f.text_area(:post_content, rows:5, class: "form-control newPostTextArea form-validate") %>  
         
          <%= if user_signed_in? then f.hidden_field(:user_id, :value => current_user.id) end%>


          <%= f.submit(class: 'btn btn-default') %>
        </div>
        <% end %>

     </div>     




<div id="posts">
